# 後端伺服器端口
PORT=3000

# 資料庫連線設定
DB_HOST=localhost
DB_NAME=napp_db
DB_USER=napp_user
DB_PASSWORD=napp_password

# JWT 認證設定
JWT_SECRET=這是您應該設定的超級複雜且安全的密鑰
JWT_EXPIRES_IN=1h

# 郵件發送設定 (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false # 如果端口是 465 則為 true，否則為 false
EMAIL_USER=您的Gmail或其他郵箱帳號@example.com
EMAIL_PASS=您的郵箱密碼或應用程式專用密碼

# 前端應用程式 URL (用於生成重設密碼連結)
FRONTEND_URL=http://localhost:8000

# 預設管理員帳號 (如果資料庫中不存在則會自動創建)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@example.com
